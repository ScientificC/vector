#!/bin/bash

URL=https://raw.githubusercontent.com/torvalds/linux/master/scripts/checkpatch.pl
file=./bin/checkpatch.pl

pushd `pwd`

cd ..
if [ ! -f $file ]; then
    curl $URL -o $file
    chmod +x $file
fi

find . -type f | grep -v -e ".txt" -e ".git" -e "build/" -e "install/" -e "test/" | xargs $file -f --no-tree --no-summary --terse --show-types --subjective --ignore SPDX_LICENSE_TAG,COMPLEX_MACRO,LEADING_SPACE,CODE_INDENT,MACRO_WITH_FLOW_CONTROL,NEW_TYPEDEFS

popd
