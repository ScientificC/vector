#!/bin/bash

pushd `pwd`

cd ..
rm -rf build
mkdir build
cd build

cmake -G "Unix Makefiles" .. -DCMAKE_INSTALL_PREFIX=../install -DVECTOR_BUILD_STATIC=ON -DVECTOR_BUILD_SHARED=ON -DCMAKE_BUILD_TYPE=Debug  -DCMAKE_TOOLCHAIN_FILE=/usr/share/mingw/toolchain-mingw32.cmake
make && \
ctest && \
make install && \
cpack -G "TGZ"

popd
